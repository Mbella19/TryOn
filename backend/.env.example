# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development

# Security - IMPORTANT: Generate secure random keys for production!
# Use: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-generate-new-for-production
JWT_SECRET_KEY=your-jwt-secret-key-here-generate-new-for-production

# Database
DATABASE_URL=sqlite:///tryon.db

# File uploads
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# Google Gemini API - Get from https://aistudio.google.com/apikey
GOOGLE_API_KEY=your-google-api-key-here

# CORS (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
